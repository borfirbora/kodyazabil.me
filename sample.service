[Unit]
Description=Gunicorn daemon for Kodyazabil
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/kodyazabil.me
Environment="KODYAZABIL_PROD=True"
ExecStart=/root/kodyazabil.me/venv/bin/gunicorn --access-logfile - --workers 3 --bind unix:/tmp/kodyazabil.sock config.wsgi:application

[Install]
WantedBy=multi-user.target